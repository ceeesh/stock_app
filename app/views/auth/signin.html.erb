<div class="bg w-full h-screen text-white flex justify-between ">
    <div class="flex justify-center items-end w-[950px] h-[520px]">
        <h1 class="text-[#01161E] text-4xl">Bullish Hunter BULLISH HUNTER</h1>
    </div>

    <div class="w-[550px] h-[500px] bg-white text-[#01161E] rounded-xl mt-7 mr-52 p-10 flex flex-col items-center">
        <h1 class="text-4xl font-bold">Sign In</h1>

        <p class="text-gray-500 mt-2">Invest for the future</p>

        <%= form_with scope: :user, class: "w-full", url:signin_path, local: true do |form|%>

        <div class="mt-5">
            <%= form.label "Email", class: "block text-[#01161E]" %>
            <%= form.email_field :email, placeholder: "Juan@gmail.com", class: "rounded border-gray-200 w-full font-semibold p-2 border font-thin" %>
        </div>

        <div class="mt-5">
            <%= form.label "Password", class: "block text-[#01161E]"  %>
            <%= form.password_field :password, placeholder: "Password",class: "rounded border-gray-200 w-full font-semibold p-2 border font-thin" %>
        </div>

        <p class="flex justify-end mt-2 text-[#01161E] font-semibold cursor-pointer hover:text-[#22414d]">Forgot Password?</p>
        <div class="mt-5">
            <%= form.submit "Sign In", class: 'rounded text-white w-full p-2 cursor-pointer bg-[#01161E] hover:bg-[#22414d]' %>
        </div>
            <% end %>

        <p class="mt-5">New Here? <%= link_to "Sign up here", signup_path, class: "cursor-pointer text-[#01161E] hover:text-[#22414d] font-semibold " %></p>
    </div>
</div>
